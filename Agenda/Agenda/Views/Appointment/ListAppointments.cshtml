@model IEnumerable<Appointment>
@{
    ViewData["Title"] = "ListAppointment";
}

<div class="text-center">
    <h1 class="display-4">List Appointments</h1>
</div>

<table class="table" style="width:100%">
    <thead>
        <tr>
            <th>#Id</th>
            <th>Date et heure</th>
            <th>Sujet</th>
            <th> Info/Suppression </th>
        </tr>
    </thead>
    <tbody>
        @foreach( var appointment in Model)
        {
            <tr>
                <td> @appointment.idAppointment</td>
                <td> @appointment.dateHour </td>
                <td> @appointment.subject </td>
                <td>
                    <a class="btn btn-primary" 
                        asp-controller="Appointment" 
                        asp-action="InfoAppointment" 
                        asp-route-id="@appointment.idAppointment">Info</a>
                    <a class="btn btn-danger" 
                        asp-controller="Appointment" 
                        asp-action="DeleteAppointment" 
                        asp-route-id="@appointment.idAppointment">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>